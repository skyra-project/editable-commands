{
	"name": "@skyra/editable-commands",
	"version": "1.0.0",
	"description": "A framework agnostic library for editable commands.",
	"author": "@skyra",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"homepage": "https://skyra-project.github.io/editable-commands",
	"private": false,
	"files": [
		"dist"
	],
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"scripts": {
		"prepublishOnly": "yarn build",
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write src/**/*.ts",
		"docs": "typedoc",
		"update": "yarn upgrade-interactive --latest",
		"build": "rollup -c rollup.config.ts",
		"watch": "yarn build -w",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz"
	},
	"peerDependencies": {
		"discord.js": "^12.5.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@sapphire/eslint-config": "^1.1.2",
		"@sapphire/prettier-config": "^1.0.5",
		"@sapphire/ts-config": "^1.1.1",
		"@types/node": "^14.14.20",
		"@typescript-eslint/eslint-plugin": "^4.12.0",
		"@typescript-eslint/parser": "^4.12.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.11.2",
		"discord.js": "^12.5.1",
		"eslint": "^7.17.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^4.3.7",
		"lint-staged": "^10.5.3",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"rollup": "^2.36.1",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.29.0",
		"standard-version": "^9.1.0",
		"typedoc": "^0.19.2",
		"typescript": "^4.1.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/editable-commands.git"
	},
	"engines": {
		"node": ">=14",
		"npm": ">=6"
	},
	"keywords": [
		"discord.js",
		"editable",
		"commands",
		"utility"
	],
	"bugs": {
		"url": "https://github.com/skyra-project/editable-commands/issues"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^8.0.4",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1"
	},
	"prettier": "@sapphire/prettier-config"
}
